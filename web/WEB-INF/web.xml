<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>InicioSesion</servlet-name>
        <servlet-class>Servlet.InicioSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrarUsuarios</servlet-name>
        <servlet-class>Servlet.RegistrarUsuarios</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Addviaje</servlet-name>
        <servlet-class>Servlet.Addviaje</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InicioSesionAdmin</servlet-name>
        <servlet-class>Servlet.InicioSesionAdmin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NuevoViaje</servlet-name>
        <servlet-class>Servlet.NuevoViaje</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InicioSesion</servlet-name>
        <url-pattern>/iniciar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrarUsuarios</servlet-name>
        <url-pattern>/registrarusu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Addviaje</servlet-name>
        <url-pattern>/agregarviaje</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InicioSesionAdmin</servlet-name>
        <url-pattern>/inicioadmin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NuevoViaje</servlet-name>
        <url-pattern>/nuevoviaje</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
